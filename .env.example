# Happy Trails Configuration - Copy to .env and fill in values

# Flask App Secret Key (generate a random string)
HAPPYTRAILS_SECRET_KEY=your-secret-key-here-change-this-in-production

# Database URL
# For local development: sqlite:///happytrails.db
# For Vercel: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///happytrails.db

# Google Maps API Key (get from Google Cloud Console)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenWeatherMap API Key (get from openweathermap.org)
WEATHER_API_KEY=your-openweather-api-key

# Flask Environment
FLASK_ENV=development
